#==============================================================
# Sprite Sheets
#==============================================================

SPRITESHEET "sheet_style_cliffs"	"Tiles/Styles/cliffs"	(8, 8), (1, 1), (18, 18); END;
SPRITESHEET "sheet_style_railings"	"Tiles/Styles/railings"	(8, 8), (1, 1), (18, 18); END;


#==============================================================
# Sprite Sets
#==============================================================

PALETTEDICTIONARY	"tile_dictionary";

# Cliffs ======================================================

MAPPEDCOLORS	("cliff",
					(light,		(248,224, 16)),
					(medium,	(200,136,  8)),
					(dark,		(128, 80,  0)),
					(black,		(  0,  0,  0)));

SOURCE "sheet_style_cliffs";
SPRITESET set_overworld_cliffs (10, 4);
	DYNAMIC STYLE "cliffs";
		ADD "present"	(0, 0);
		ADD "seasons"	(0, 4);
		ADD "past"		(0, 8);
		END;
END;

# Railings ====================================================

MAPPEDCOLORS	("railings",
					(light,		(248,208,136)),
					(medium,	(232,  8, 24)),
					(dark,		(104,  8, 40)),
					(black,		(  0,  0,  0)));
		
SOURCE "sheet_style_railings";
SPRITESET set_overworld_railings (5, 3);
	DYNAMIC STYLE "railings";
		ADD "present"	(0, 0);
		ADD "seasons"	(0, 3);
		ADD "past"		(0, 6);
		END;
END;

