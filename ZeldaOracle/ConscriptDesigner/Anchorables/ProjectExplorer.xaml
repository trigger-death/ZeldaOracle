<UserControl x:Class="ConscriptDesigner.Anchorables.ProjectExplorer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConscriptDesigner.Anchorables"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <TreeView x:Name="treeView" AllowDrop="False" SelectedItemChanged="OnSelectionChanged" MouseLeave="OnTreeViewRootMouseLeave">
        <TreeView.ItemContainerStyle>
            <Style TargetType="{x:Type TreeViewItem}">
                <Setter Property="AllowDrop" Value="True"/>
                <EventSetter Event="TreeViewItem.PreviewMouseDown" Handler="OnTreeViewPreviewMouseDown"/>
                <EventSetter Event="TreeViewItem.MouseMove" Handler="OnTreeViewMouseMove"/>
                <EventSetter Event="TreeViewItem.DragEnter" Handler="OnTreeViewDragEnter"/>
                <EventSetter Event="TreeViewItem.DragLeave" Handler="OnTreeViewDragLeave"/>
                <EventSetter Event="TreeViewItem.DragOver"  Handler="OnTreeViewDragOver"/>
                <EventSetter Event="TreeViewItem.Drop"      Handler="OnTreeViewDrop"/>
            </Style>
        </TreeView.ItemContainerStyle>
    </TreeView>
</UserControl>
